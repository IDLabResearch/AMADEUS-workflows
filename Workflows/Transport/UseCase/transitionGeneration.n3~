                          #action name
                          (?x ?y :train true)
                          #Duration
                          40
                          #cost
                          1
                          #belief
                          0.99
                          #comfort
                          0.99
                         )
  } 
  <= 
  {#condition
?user a :User.
#   (?time 20) math:sum ?atime.
  }
}.

